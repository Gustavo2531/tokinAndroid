<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gustavomendez.tokin.CalendarFragment">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/buttonAgregarEvento"
        android:layout_width="468dp"
        android:layout_height="39dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/background_light"
        android:text="Agregar Evento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listViewEventos"
        android:layout_width="375dp"
        android:layout_height="395dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEventos" />

    <Button
        android:id="@+id/buttonEventos"
        android:layout_width="468dp"
        android:layout_height="39dp"
        android:layout_marginBottom="552dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/background_light"
        android:text="Confirmados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPasados"
        android:layout_width="468dp"
        android:layout_height="39dp"
        android:layout_marginBottom="616dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/background_light"
        android:text="Eventos Pasados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>

